
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel Login</title>
    <link rel="stylesheet" href="~/Web-Admin Login/css/style.css">
</head>
<body>
    <div class="container">
        <div class="contact-form">
            <img src="~/Web-Admin Login/img/avatar.png" class="admin-img">
            <h2>Admin Login</h2>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="txtb">
                    <input type="text" name="KullaniciAdi" placeholder="Kullanıcı Adı">
                </div>
                <div class="txtb">
                    <input type="password" name="Sifre" placeholder="Şifre">
                </div>
                <input type="submit" class="logbtn" value="Giriş">
            }


        </div>
    </div>
</body>
</html>
